{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2021",
    "lib": [
      "ES2021",
      "dom",
      "dom.iterable",
      "ES2021.String"
    ],


    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    // Completeness
    "skipLibCheck": true,
  },
}